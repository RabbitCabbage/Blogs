---
import { themeConfig } from '~/.config'
import { getPathFromCategory } from '~/utils'

interface Props {
  category: string
}

const { category } = Astro.props

function getCategoryUrl(category: string) {
  return `${import.meta.env.BASE_URL}/categories/${getPathFromCategory(category, themeConfig.site.categoryMap)}`
}
---

<a href={getCategoryUrl(category)}>
  # {category}
</a>
